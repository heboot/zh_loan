<?xml version="1.0" encoding="utf-8"?>
<layout>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/bg_login"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x18"
        android:layout_marginTop="@dimen/y113"
        android:text="欢迎回来!登录"
        android:textColor="#1D1E2C"
        android:textSize="@dimen/x24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mobile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginTop="@dimen/y200"
        android:text="输入手机号"
        android:textColor="#ff69707f"
        android:textSize="@dimen/x12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:background="@null"
        android:text="输入手机号"
        android:textColor="#1D1E2C"
        android:textSize="@dimen/x16"
        app:layout_constraintLeft_toLeftOf="@+id/tv_mobile_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_mobile_title"></EditText>

    <TextView
        android:id="@+id/tv_pwd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y67"
        android:text="输入手机号"
        android:textColor="#ff69707f"
        android:textSize="@dimen/x12"
        app:layout_constraintLeft_toLeftOf="@+id/tv_mobile_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_mobile_title" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:background="@null"
        android:inputType="textPassword"
        android:text="输入密码"
        android:textColor="#1D1E2C"
        android:textSize="@dimen/x16"
        app:layout_constraintLeft_toLeftOf="@+id/tv_mobile_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_pwd_title"></EditText>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="@dimen/x311"
        android:layout_height="@dimen/y50"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/bg_login_btn"
        android:gravity="center"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="@dimen/x14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_pwd" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y25"
        android:text="忘记密码?"
        android:textColor="#6266F9"
        android:textSize="@dimen/x14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y117"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还没有账号？"
            android:textColor="#1D1E2C"
            android:textSize="@dimen/x14" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="马上注册"
            android:textColor="#6266F9"
            android:textSize="@dimen/x14"
          />

    </LinearLayout>


</android.support.constraint.ConstraintLayout></layout>