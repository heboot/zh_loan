<?xml version="1.0" encoding="utf-8"?>
<layout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_login">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x18"
            android:layout_marginTop="@dimen/y113"
            android:text="新用户注册"
            android:textColor="#1D1E2C"
            android:textSize="@dimen/x24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_mobile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x49"
            android:layout_marginTop="@dimen/y200"
            android:text="输入手机号"
            android:textColor="#ff69707f"
            android:textSize="@dimen/x12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:background="@null"
            android:hint="输入手机号"
            android:textColor="#1D1E2C"
            android:textSize="@dimen/x16"
            app:layout_constraintLeft_toLeftOf="@+id/tv_mobile_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_mobile_title"></EditText>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x33"
            android:layout_marginTop="@dimen/y7"
            android:layout_marginRight="@dimen/x33"
            android:background="#E6E6E6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_mobile"></View>

        <TextView
            android:id="@+id/tv_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y67"
            android:text="输入验证码"
            android:textColor="#ff69707f"
            android:textSize="@dimen/x12"
            app:layout_constraintLeft_toLeftOf="@+id/tv_mobile_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_mobile_title" />

        <View
            android:id="@+id/v2"
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x33"
            android:layout_marginTop="@dimen/y7"
            android:layout_marginRight="@dimen/x33"
            android:background="#E6E6E6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_code"></View>

        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:background="@null"
            android:hint="输入验证码"
            android:inputType="number"
            android:textColor="#1D1E2C"
            android:textSize="@dimen/x16"
            app:layout_constraintLeft_toLeftOf="@+id/tv_mobile_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_code_title"></EditText>


        <TextView
            android:id="@+id/tv_pwd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y67"
            android:text="输入密码"
            android:textColor="#ff69707f"
            android:textSize="@dimen/x12"
            app:layout_constraintLeft_toLeftOf="@+id/tv_code_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_code_title" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:background="@null"
            android:hint="输入密码"
            android:inputType="number"
            android:textColor="#1D1E2C"
            android:textSize="@dimen/x16"
            app:layout_constraintLeft_toLeftOf="@+id/tv_mobile_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_pwd_title"></EditText>

        <View
            android:id="@+id/v3"
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x33"
            android:layout_marginTop="@dimen/y7"
            android:layout_marginRight="@dimen/x33"
            android:background="#E6E6E6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_pwd"></View>
        <TextView
            android:id="@+id/tv_send_sms"
            android:layout_width="@dimen/x75"
            android:layout_height="@dimen/y25"
            android:layout_marginBottom="@dimen/y4"
            android:background="@drawable/bg_send_sms_btn"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#fff"
            android:textSize="@dimen/x11"
            app:layout_constraintBottom_toTopOf="@+id/v2"
            app:layout_constraintRight_toRightOf="@+id/v2" />


        <TextView
            android:id="@+id/tv_login"
            android:layout_width="@dimen/x311"
            android:layout_height="@dimen/y50"
            android:layout_marginTop="@dimen/y23"
            android:background="@drawable/bg_login_btn"
            android:gravity="center"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="@dimen/x14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v3" />


    </android.support.constraint.ConstraintLayout>
</layout>