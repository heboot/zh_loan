<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_bg"
            android:layout_width="0dp"
            android:layout_height="@dimen/y293"
            android:background="@drawable/bg_account"></View>

        <include
            android:id="@+id/include_toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></include>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x18"
            android:layout_marginTop="@dimen/y86"
            android:text="待还款金额(元)"
            android:textColor="#000000"
            android:textSize="@dimen/x14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x18"
            android:layout_marginTop="@dimen/y40"
            android:text="6127.44"
            android:textColor="#000000"
            android:textSize="55sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_repayment"
            android:layout_width="@dimen/x84"
            android:layout_height="@dimen/y30"
            android:layout_marginTop="@dimen/y168"
            android:layout_marginRight="@dimen/x11"
            android:background="@drawable/bg_repayment_btn"
            android:gravity="center"
            android:text="全部还款"
            android:textColor="#fff"
            android:textSize="@dimen/x14"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x18"
            android:layout_marginTop="@dimen/y20"
            android:text="截止日期"
            android:textSize="@dimen/x12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_balance" />

        <TextView
            android:textColor="#4D4D4D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y5"
            android:text="2019-90-90"
            android:textSize="@dimen/x14"
            app:layout_constraintLeft_toLeftOf="@+id/tv_end_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_end_date" />

        <LinearLayout
            android:id="@+id/llyt_option"
            android:layout_width="0dp"
            android:layout_height="@dimen/y38"
            android:background="#ffffff"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/v_bg">



            <TextView
                android:id="@+id/tv_type1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6个月"
                android:textSize="@dimen/x15" />

            <TextView
                android:id="@+id/tv_type2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1年"
                android:textSize="@dimen/x15" />

            <TextView
                android:id="@+id/tv_type3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2年"
                android:textSize="@dimen/x15" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llyt_option"></android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>
</layout>